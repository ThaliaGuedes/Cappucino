<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_view"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="#855E53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        app:tint="#fff"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Capuccino"
        android:textSize="24sp"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/view_view"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_clock"
        app:tint="#855E53"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_margin="16dp"
        android:src="@drawable/ic_clock"
        app:layout_constraintEnd_toStartOf="@+id/img_favorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_view"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/img_clock"
        android:id="@+id/text_clock"
        android:text="15 minutos"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="@+id/img_clock"
        app:layout_constraintEnd_toEndOf="@+id/img_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_favorite"
        app:layout_constraintStart_toEndOf="@+id/img_clock"
        app:tint="#855E53"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_view"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/img_favorite"
        android:id="@+id/text_favorite"
        android:text="4512"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="@+id/img_favorite"
        app:layout_constraintEnd_toEndOf="@+id/img_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_separator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/text_clock"
        android:layout_margin="16dp"
        android:background="#855E53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_separator"
        android:text="Uma simples e perfeita chicara de cafe"
        android:layout_margin="16dp"
        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_description"
        android:text="Ingredientes"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/img_ingredient_1"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#855E53"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_chevron"
        app:layout_constraintTop_toBottomOf="@+id/text_ingredient"/>

    <TextView
        android:id="@+id/text_ingredient_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1 dose expresso"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img_ingredient_1"
        app:layout_constraintTop_toTopOf="@id/img_ingredient_1"
        app:layout_constraintStart_toEndOf="@id/img_ingredient_1"/>


    <ImageView
        android:id="@+id/img_ingredient_2"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#855E53"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_chevron"
        app:layout_constraintTop_toBottomOf="@+id/text_ingredient_1"/>

    <TextView
        android:id="@+id/text_ingredient_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1000ml de leite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img_ingredient_2"
        app:layout_constraintTop_toTopOf="@id/img_ingredient_2"
        app:layout_constraintStart_toEndOf="@id/img_ingredient_2"/>

    <ImageView
        android:id="@+id/img_ingredient_3"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#855E53"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_chevron"
        app:layout_constraintTop_toBottomOf="@+id/text_ingredient_2"/>

    <TextView
        android:id="@+id/text_ingredient_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1 colher de chocolate em pÃ³"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img_ingredient_3"
        app:layout_constraintTop_toTopOf="@id/img_ingredient_3"
        app:layout_constraintStart_toEndOf="@id/img_ingredient_3"/>

</androidx.constraintlayout.widget.ConstraintLayout>